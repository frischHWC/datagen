{
  "Fields": [
    {
      "name": "name",
      "type": "NAME",
      "filters": ["Germany"]
    },
    {
      "name": "id",
      "type": "INCREMENT_INTEGER",
      "min": 210000,
      "max": 300000
    },
    {
      "name": "birthdate",
      "type": "BIRTHDATE",
      "min": "1/1/1970",
      "max": "1/1/2004"
    },
    {
      "name": "city",
      "type": "CITY",
      "filters": ["Germany"]
    },
    {
      "name": "country",
      "type": "LINK",
      "conditionals": {
        "link": "$city.country"
      }
    },
    {
      "name": "email",
      "type": "STRING",
      "conditionals": {
        "injection": "${name}@company.de"
      }
    },
    {
      "name": "phone_number",
